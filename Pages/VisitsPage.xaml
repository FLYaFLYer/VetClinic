<Page x:Class="VetClinic.Pages.VisitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Приёмы"
      Unloaded="Page_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnAddVisit" Content="Новый приём" 
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnAddVisit_Click"/>
            <Button x:Name="btnEditVisit" Content="Изменить"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="10,0,0,0"
                    Click="BtnEditVisit_Click"/>
            <Button x:Name="btnViewDetails" Content="Подробнее"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="10,0,0,0"
                    Click="BtnViewDetails_Click"/>
            <TextBlock Text="Фильтр по дате:" VerticalAlignment="Center" Margin="10,0,5,0" FontWeight="SemiBold" FontSize="14"/>
            <DatePicker x:Name="dpFilterDate" 
                        Width="140" Height="32" VerticalAlignment="Center" Margin="10,0,0,0"
                        SelectedDateChanged="DpFilterDate_SelectedDateChanged"/>
            <Button x:Name="btnClearFilter" Content="Сбросить"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="10,0,0,0"
                    Click="BtnClearFilter_Click"/>
        </StackPanel>

        <DataGrid x:Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding VisitDate, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Пациент" Binding="{Binding Patient.Name}" Width="120"/>
                <DataGridTextColumn Header="Владелец" Width="150" IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Patient.Owner.FullName" Mode="OneWay"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Ветеринар" Width="150" IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="User.FullName" Mode="OneWay"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="200"/>
                <DataGridTextColumn Header="Статус" Width="100" IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Status" Mode="OneWay"/>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Green"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Завершён">
                                    <Setter Property="Foreground" Value="Blue"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Отменён">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="В процессе">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Перенесён">
                                    <Setter Property="Foreground" Value="Purple"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>