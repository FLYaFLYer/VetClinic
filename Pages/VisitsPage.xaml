<Page x:Class="VetClinic.Pages.VisitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Приёмы">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAddVisit" Content="Новый приём" 
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnAddVisit_Click"/>
            <Button x:Name="btnViewDetails" Content="Подробнее" Margin="10,0,0,0"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnViewDetails_Click"/>
            <DatePicker x:Name="dpFilterDate" Width="120" Margin="10,0,0,0"
                        SelectedDateChanged="DpFilterDate_SelectedDateChanged"/>
            <Button x:Name="btnClearFilter" Content="Сбросить" Margin="10,0,0,0"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnClearFilter_Click"/>
        </StackPanel>

        <DataGrid x:Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding VisitDate, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" Width="120"/>
                <DataGridTextColumn Header="Пациент" Binding="{Binding Patient.Name}" Width="120"/>
                <DataGridTextColumn Header="Владелец" Binding="{Binding Patient.Owner.FullName}" Width="150"/>
                <DataGridTextColumn Header="Ветеринар" Binding="{Binding User.FullName}" Width="150"/>
                <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="200"/>
                <DataGridTextColumn Header="Температура" Binding="{Binding Temperature}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>