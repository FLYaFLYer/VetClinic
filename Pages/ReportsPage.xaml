<Page x:Class="VetClinic.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Отчёты">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Отчёты" FontSize="18" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <ComboBox x:Name="cmbReportType" Width="250" SelectedIndex="0">
                    <ComboBoxItem Content="Статистика приёмов"/>
                    <ComboBoxItem Content="Лекарства с низким запасом"/>
                    <ComboBoxItem Content="Пациенты по видам"/>
                </ComboBox>

                <DatePicker x:Name="dpStartDate" Margin="10,0,0,0" Width="120"/>
                <DatePicker x:Name="dpEndDate" Margin="5,0,0,0" Width="120"/>

                <Button Content="Сформировать" 
                        Margin="10,0,0,0" 
                        Padding="10,5"
                        Style="{StaticResource NavButtonStyle}"
                        Click="BtnGenerate_Click"/>

                <Button Content="Экспорт в Excel" 
                        Margin="10,0,0,0" 
                        Padding="10,5"
                        Style="{StaticResource NavButtonStyle}"
                        Click="BtnExport_Click"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False"/>
    </Grid>
</Page>