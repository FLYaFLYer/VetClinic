<Page x:Class="VetClinic.Pages.MedicinesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Лекарства">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAddMedicine" Content="Добавить" 
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnAddMedicine_Click"/>
            <Button x:Name="btnEditMedicine" Content="Изменить" Margin="10,0,0,0"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnEditMedicine_Click"/>
            <Button x:Name="btnDeleteMedicine" Content="Удалить" Margin="10,0,0,0"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnDeleteMedicine_Click"/>
            <Button x:Name="btnAddStock" Content="Приход" Margin="10,0,0,0"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnAddStock_Click"/>
            <Button x:Name="btnRemoveStock" Content="Расход" Margin="10,0,0,0"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnRemoveStock_Click"/>
        </StackPanel>

        <DataGrid x:Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="80"/>
                <DataGridTextColumn Header="Единица" Binding="{Binding Unit}" Width="70"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding TotalQuantity}" Width="70"/>
                <DataGridTextColumn Header="Мин.запас" Binding="{Binding MinStock}" Width="80"/>
                <DataGridTextColumn Header="Статус" Width="100">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}">
                            <Binding Path="IsLowStock"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text">
                                <Setter.Value>
                                    <MultiBinding StringFormat="{}{0}">
                                        <Binding Path="IsLowStock"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="Red" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLowStock}" Value="False">
                                    <Setter Property="Foreground" Value="Green" />
                                    <Setter Property="Text" Value="В норме" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                    <Setter Property="Text" Value="Мало!" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>