<Page x:Class="VetClinic.Pages.MedicinesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Лекарства">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Используем UniformGrid для одинакового размера кнопок -->
        <UniformGrid Grid.Row="0" Rows="1" Columns="5" Margin="10" HorizontalAlignment="Left">
            <Button x:Name="btnAddMedicine" Content="Добавить" 
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnAddMedicine_Click"/>
            <Button x:Name="btnEditMedicine" Content="Изменить"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnEditMedicine_Click"/>
            <Button x:Name="btnDeleteMedicine" Content="Удалить"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnDeleteMedicine_Click"/>
            <Button x:Name="btnAddStock" Content="Приход"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnAddStock_Click"/>
            <Button x:Name="btnRemoveStock" Content="Расход"
                    Style="{StaticResource NavButtonStyle}"
                    Click="BtnRemoveStock_Click"/>
        </UniformGrid>

        <DataGrid x:Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="80"/>
                <DataGridTextColumn Header="Единица" Binding="{Binding Unit}" Width="70"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding TotalQuantity}" Width="70"/>
                <DataGridTextColumn Header="Мин.запас" Binding="{Binding MinStock}" Width="80"/>
                <DataGridTextColumn Header="Статус" Width="100" IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="StockStatus" Mode="OneWay"/>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Red"/>
                            <Setter Property="Text" Value="Мало!"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLowStock}" Value="False">
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="Text" Value="В норме"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>