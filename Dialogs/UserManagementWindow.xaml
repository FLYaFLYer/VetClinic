<Window x:Class="VetClinic.Dialogs.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление пользователями" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        MinHeight="500"
        MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#FF4CAF50" 
                Padding="15">
            <StackPanel>
                <TextBlock Text="Управление пользователями" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Добавление, редактирование и удаление пользователей системы"
                           FontSize="12"
                           Foreground="#E0F7FA"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Панель инструментов -->
        <Border Grid.Row="0" 
                Background="#FFF9F9F9" 
                BorderBrush="#FFEEEEEE" 
                BorderThickness="0,0,0,1"
                Padding="15,10"
                Margin="0,50,0,0">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnAddUser" 
                        Content="Добавить пользователя"
                        Style="{StaticResource NavButtonStyle}"
                        Height="36"
                        Padding="12,8"
                        Click="BtnAddUser_Click"/>
                <Button x:Name="btnEditUser" 
                        Content="Изменить"
                        Style="{StaticResource NavButtonStyle}"
                        Height="36"
                        Padding="12,8"
                        Margin="10,0,0,0"
                        Click="BtnEditUser_Click"/>
                <Button x:Name="btnDeleteUser" 
                        Content="Удалить"
                        Style="{StaticResource NavButtonStyle}"
                        Height="36"
                        Padding="12,8"
                        Margin="10,0,0,0"
                        Click="BtnDeleteUser_Click"/>
                <Button x:Name="btnChangePassword" 
                        Content="Сменить пароль"
                        Style="{StaticResource NavButtonStyle}"
                        Height="36"
                        Padding="12,8"
                        Margin="10,0,0,0"
                        Click="BtnChangePassword_Click"/>
            </StackPanel>
        </Border>

        <!-- Таблица пользователей -->
        <DataGrid x:Name="dataGrid" 
                  Grid.Row="1" 
                  Margin="15,10,15,10"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="50"/>
                <DataGridTextColumn Header="Фамилия" 
                                    Binding="{Binding LastName}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Имя" 
                                    Binding="{Binding FirstName}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Отчество" 
                                    Binding="{Binding MiddleName}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Должность" 
                                    Binding="{Binding Role.Name}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Логин" 
                                    Binding="{Binding Login}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Телефон" 
                                    Binding="{Binding PhoneNumber}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Дата приема" 
                                    Binding="{Binding DateOfHire, StringFormat=dd.MM.yyyy}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="#FFF9F9F9" 
                BorderBrush="#FFEEEEEE" 
                BorderThickness="0,1,0,0"
                Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Закрыть" 
                        Width="100"
                        Height="36"
                        Style="{StaticResource NavButtonStyle}"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>