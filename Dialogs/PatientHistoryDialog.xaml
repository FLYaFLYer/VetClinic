<Window x:Class="VetClinic.Dialogs.PatientHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История пациента" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtPatientInfo" Grid.Row="0" Margin="10" FontSize="14" FontWeight="Bold"/>

        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding VisitDate, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="*"/>
                <DataGridTextColumn Header="Ветеринар" Width="150" IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="User.FullName" Mode="OneWay"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Температура" Binding="{Binding Temperature, StringFormat=N1}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Закрыть" Width="80" Margin="10" HorizontalAlignment="Right" Click="BtnClose_Click"/>
    </Grid>
</Window>