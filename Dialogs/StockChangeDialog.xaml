<Window x:Class="VetClinic.Dialogs.StockChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение остатка лекарства" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Заголовок -->
                <TextBlock Text="Изменение остатка лекарства" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#FF4CAF50"/>

                <!-- Наименование -->
                <TextBlock Text="Наименование:" FontWeight="SemiBold"/>
                <Border Margin="0,5,0,10"
                        Padding="5,2"
                        Background="#FFF9F9F9"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        MinHeight="24">
                    <TextBlock x:Name="txtName" 
                               Margin="3,1"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Текущий запас -->
                <TextBlock Text="Текущий запас:" FontWeight="SemiBold"/>
                <Border Margin="0,5,0,10"
                        Padding="5,2"
                        Background="#FFF9F9F9"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        MinHeight="24">
                    <TextBlock x:Name="txtCurrentStock" 
                               Margin="3,1"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Количество -->
                <TextBlock Text="Количество:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtAmount" 
                         Text="{Binding Amount, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"
                         Height="34"
                         Padding="8,4"
                         FontSize="14"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <!-- Комментарий -->
                <TextBlock Text="Комментарий:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtComment" 
                         Text="{Binding Comment, ValidatesOnDataErrors=True}"
                         Margin="0,5,0,20"
                         Height="100" 
                         VerticalScrollBarVisibility="Auto" 
                         TextWrapping="Wrap"
                         Padding="8,4"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <!-- Кнопки -->
                <Border BorderBrush="#FFEEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button Content="Отмена" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Click="BtnCancel_Click"/>
                        <Button Content="Сохранить" 
                                Style="{StaticResource DialogButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>