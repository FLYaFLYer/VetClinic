<Window x:Class="VetClinic.Dialogs.StockChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение остатка лекарства" Height="250" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="Наименование:" FontWeight="Bold"/>
        <TextBlock x:Name="txtName" Margin="0,5,0,10"/>

        <TextBlock Text="Количество:"/>
        <TextBox x:Name="txtAmount" Margin="0,5,0,10"/>

        <TextBlock Text="Комментарий:"/>
        <TextBox x:Name="txtComment" Margin="0,5,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="Сохранить" Width="80" Click="BtnSave_Click"/>
        </StackPanel>
    </StackPanel>
</Window>