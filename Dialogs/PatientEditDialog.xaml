<Window x:Class="VetClinic.Dialogs.PatientEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пациента" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Заголовок -->
                <TextBlock Text="Редактирование пациента" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#FF4CAF50"/>

                <!-- Кличка -->
                <TextBlock Text="Кличка:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtName" 
                         Text="{Binding PatientName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5,0,10"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Владелец -->
                <TextBlock Text="Владелец:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbOwners" 
                          DisplayMemberPath="FullName" 
                          SelectedValuePath="Id" 
                          SelectedValue="{Binding OwnerId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                          Margin="0,5,0,10"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Вид животного -->
                <TextBlock Text="Вид животного:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbAnimalTypes" 
                          DisplayMemberPath="Name" 
                          SelectedValuePath="Id" 
                          SelectedValue="{Binding AnimalTypeId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                          Margin="0,5,0,10"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Порода -->
                <TextBlock Text="Порода:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbBreeds" 
                          DisplayMemberPath="Name" 
                          SelectedValuePath="Id" 
                          SelectedValue="{Binding BreedId}" 
                          Margin="0,5,0,10"
                          Style="{StaticResource BaseComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Дата рождения -->
                <TextBlock Text="Дата рождения:" FontWeight="SemiBold"/>
                <DatePicker x:Name="dpBirthDate" 
                            SelectedDate="{Binding BirthDate}" 
                            Margin="0,5,0,10"
                            Style="{StaticResource BaseDatePickerStyle}"
                            Height="34"/>

                <!-- Вес -->
                <TextBlock Text="Вес (кг):" FontWeight="SemiBold"/>
                <TextBox x:Name="txtWeight" 
                         Text="{Binding Weight}" 
                         Margin="0,5,0,10"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Цвет -->
                <TextBlock Text="Цвет:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtColor" 
                         Text="{Binding Color}" 
                         Margin="0,5,0,10"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Номер чипа -->
                <TextBlock Text="Номер чипа:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtChipNumber" 
                         Text="{Binding ChipNumber}" 
                         Margin="0,5,0,10"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Особые приметы -->
                <TextBlock Text="Особые приметы:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDistinctiveFeatures" 
                         Text="{Binding DistinctiveFeatures}" 
                         Height="80" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="0,5,0,20"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Padding="8,4"/>

                <!-- Кнопки -->
                <Border BorderBrush="#FFEEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button Content="Отмена" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Click="BtnCancel_Click"/>
                        <Button Content="Сохранить" 
                                Style="{StaticResource DialogButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>