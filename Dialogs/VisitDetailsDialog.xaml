<Window x:Class="VetClinic.Dialogs.VisitDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали приёма" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Дата приёма:" Grid.Row="0" FontWeight="Bold"/>
        <TextBlock x:Name="txtVisitDate" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Пациент:" Grid.Row="2" FontWeight="Bold"/>
        <TextBlock x:Name="txtPatient" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="Диагноз:" Grid.Row="4" FontWeight="Bold"/>
        <TextBlock x:Name="txtDiagnosis" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="Симптомы:" Grid.Row="6" FontWeight="Bold"/>
        <TextBox x:Name="txtSymptoms" Grid.Row="7" IsReadOnly="True" 
                 Height="60" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <TextBlock Text="Рекомендации:" Grid.Row="8" FontWeight="Bold"/>
        <TextBox x:Name="txtRecommendations" Grid.Row="9" IsReadOnly="True"
                 Height="60" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Закрыть" Width="80" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>