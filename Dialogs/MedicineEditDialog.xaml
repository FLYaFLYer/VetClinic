<Window x:Class="VetClinic.Dialogs.MedicineEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование лекарства" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:" Grid.Row="0"/>
        <TextBox x:Name="txtName" Text="{Binding MedicineName}" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Описание:" Grid.Row="2"/>
        <TextBox x:Name="txtDescription" Text="{Binding Description}" Grid.Row="3" 
                 Height="60" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <TextBlock Text="Категория:" Grid.Row="4"/>
        <ComboBox x:Name="cmbCategory" SelectedItem="{Binding Category}" Grid.Row="5" Margin="0,0,0,10">
            <ComboBoxItem>Антибиотики</ComboBoxItem>
            <ComboBoxItem>Витамины</ComboBoxItem>
            <ComboBoxItem>Вакцины</ComboBoxItem>
            <ComboBoxItem>Антипаразитарные</ComboBoxItem>
            <ComboBoxItem>Обезболивающие</ComboBoxItem>
            <ComboBoxItem>ЖКТ</ComboBoxItem>
            <ComboBoxItem>Перевязочные</ComboBoxItem>
            <ComboBoxItem>Другое</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Цена:" Grid.Row="6"/>
        <TextBox x:Name="txtPrice" Text="{Binding Price}" Grid.Row="7" Margin="0,0,0,10"/>

        <TextBlock Text="Единица измерения:" Grid.Row="8"/>
        <ComboBox x:Name="cmbUnit" SelectedItem="{Binding Unit}" Grid.Row="9" Margin="0,0,0,10">
            <ComboBoxItem>шт</ComboBoxItem>
            <ComboBoxItem>уп</ComboBoxItem>
            <ComboBoxItem>флакон</ComboBoxItem>
            <ComboBoxItem>упак</ComboBoxItem>
            <ComboBoxItem>туба</ComboBoxItem>
            <ComboBoxItem>доза</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Минимальный запас:" Grid.Row="10"/>
        <TextBox x:Name="txtMinStock" Text="{Binding MinStock}" Grid.Row="11" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Style="{StaticResource DialogButtonStyle}" Click="BtnCancel_Click"/>
            <Button Content="Сохранить" Style="{StaticResource DialogButtonStyle}" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>