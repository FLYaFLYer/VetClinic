 <Window x:Class="VetClinic.Dialogs.MedicineEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование лекарства" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MinWidth="500"
        MinHeight="500">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="15">
                <!-- Заголовок -->
                <TextBlock Text="Редактирование лекарства" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#FF4CAF50"/>

                <!-- Название -->
                <TextBlock Text="Название:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtName" 
                         Text="{Binding MedicineName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         ToolTip="Введите название лекарства"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" 
                         Text="{Binding Description, ValidatesOnDataErrors=True}" 
                         Height="60" 
                         VerticalScrollBarVisibility="Auto" 
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         ToolTip="Введите описание лекарства"/>

                <!-- Категория -->
                <TextBlock Text="Категория:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbCategory" 
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding Category}"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          ToolTip="Выберите категорию лекарства"/>

                <!-- Цена -->
                <TextBlock Text="Цена (руб):" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPrice" 
                         Text="{Binding Price, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         ToolTip="Введите цену лекарства"/>

                <!-- Единица измерения -->
                <TextBlock Text="Единица измерения:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbUnit" 
                          ItemsSource="{Binding Units}"
                          SelectedItem="{Binding Unit, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          ToolTip="Выберите единицу измерения"/>

                <!-- Минимальный запас -->
                <TextBlock Text="Минимальный запас:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtMinStock" 
                         Text="{Binding MinStock, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         ToolTip="Введите минимальный запас на складе"/>

                <!-- Информационное сообщение -->
                <Border Background="#FFF3F3F3" 
                        BorderBrush="#FFDDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,10,0,20"
                        Padding="10,8">
                    <TextBlock Text="При неправильном заполнении поля появится красный кружок в правом верхнем углу. Наведите на него, чтобы увидеть описание ошибки."
                               FontSize="12"
                               Foreground="#666666"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Кнопки -->
                <Border BorderBrush="#FFEEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button Content="Отмена" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Click="BtnCancel_Click"/>
                        <Button Content="Сохранить" 
                                Style="{StaticResource DialogButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>