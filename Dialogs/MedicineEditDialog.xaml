<Window x:Class="VetClinic.Dialogs.MedicineEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование лекарства" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Заголовок -->
                <TextBlock Text="Редактирование лекарства" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#FF4CAF50"/>

                <!-- Название -->
                <TextBlock Text="Название:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtName" 
                         Margin="0,5,0,10"
                         Text="{Binding MedicineName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" 
                         Text="{Binding Description}" 
                         Height="60" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="0,5,0,10"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Padding="8,4"/>

                <!-- Категория -->
                <TextBlock Text="Категория:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbCategory" 
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding Category}"
                          Margin="0,5,0,10"
                          Style="{StaticResource BaseComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Цена -->
                <TextBlock Text="Цена:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPrice" 
                         Text="{Binding Price, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Единица измерения -->
                <TextBlock Text="Единица измерения:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbUnit" 
                          ItemsSource="{Binding Units}"
                          SelectedItem="{Binding Unit, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,5,0,10"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Минимальный запас -->
                <TextBlock Text="Минимальный запас:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtMinStock" 
                         Text="{Binding MinStock, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,20"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Кнопки -->
                <Border BorderBrush="#FFEEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button Content="Отмена" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Click="BtnCancel_Click"/>
                        <Button Content="Сохранить" 
                                Style="{StaticResource DialogButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>