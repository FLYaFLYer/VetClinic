<Window x:Class="VetClinic.Dialogs.OwnerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование владельца" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>
                <TextBlock Text="Редактирование владельца" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#FF4CAF50"/>

                <TextBlock Text="Фамилия:"/>
                <TextBox x:Name="txtLastName" 
                         Text="{Binding LastName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                         Height="34"
                         Padding="8,4"
                         Margin="0,0,0,10"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <TextBlock Text="Имя:"/>
                <TextBox x:Name="txtFirstName" 
                         Text="{Binding FirstName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                         Height="34"
                         Padding="8,4"
                         Margin="0,0,0,10"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <TextBlock Text="Телефон:"/>
                <TextBox x:Name="txtPhone" 
                         Text="{Binding Phone, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                         Height="34"
                         Padding="8,4"
                         Margin="0,0,0,10"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <TextBlock Text="Email:"/>
                <TextBox x:Name="txtEmail" 
                         Text="{Binding Email, ValidatesOnDataErrors=True}" 
                         Height="34"
                         Padding="8,4"
                         Margin="0,0,0,10"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <TextBlock Text="Адрес:"/>
                <TextBox x:Name="txtAddress" 
                         Text="{Binding Address, ValidatesOnDataErrors=True}" 
                         Height="60" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="0,0,0,20"
                         Padding="8,4"
                         Style="{StaticResource ValidatableTextBoxStyle}"/>

                <Border BorderBrush="#FFEEEEEE" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Отмена" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Click="BtnCancel_Click"/>
                        <Button x:Name="btnSave"
                                Content="Сохранить" 
                                Style="{StaticResource DialogButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>