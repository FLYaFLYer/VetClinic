<Window x:Class="VetClinic.Dialogs.OwnerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование владельца" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Фамилия:" Grid.Row="0"/>
        <TextBox x:Name="txtLastName" Text="{Binding LastName}" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Имя:" Grid.Row="2"/>
        <TextBox x:Name="txtFirstName" Text="{Binding FirstName}" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="Телефон:" Grid.Row="4"/>
        <TextBox x:Name="txtPhone" Text="{Binding Phone}" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="Email:" Grid.Row="6"/>
        <TextBox x:Name="txtEmail" Text="{Binding Email}" Grid.Row="7" Margin="0,0,0,10"/>

        <TextBlock Text="Адрес:" Grid.Row="8"/>
        <TextBox x:Name="txtAddress" Text="{Binding Address}" Grid.Row="9" 
                 Height="60" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Style="{StaticResource CancelButtonStyle}" 
                    Click="BtnCancel_Click"
                    Margin="0,0,20,0"/>
            <Button Content="Сохранить" 
                    Style="{StaticResource DialogButtonStyle}" 
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>