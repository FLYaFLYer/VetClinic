<Window x:Class="VetClinic.Dialogs.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" Height="600" Width="500"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Логин -->
            <TextBlock Text="Логин:" Grid.Row="0" FontWeight="Bold"/>
            <TextBox x:Name="txtLogin" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="1" Margin="0,2,0,10"/>

            <!-- Пароль -->
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="Пароль:" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button x:Name="btnGeneratePassword" Content="Сгенерировать" Margin="10,0,0,0" Padding="5,2" 
                        Click="BtnGeneratePassword_Click" VerticalAlignment="Center"/>
                <Button x:Name="btnCopyPassword" Content="Копировать" Margin="5,0,0,0" Padding="5,2" 
                        Click="BtnCopyPassword_Click" VerticalAlignment="Center"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0,2,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <PasswordBox x:Name="pwdPassword" Grid.Column="0"
                             PasswordChanged="PwdPassword_PasswordChanged"
                             Visibility="Visible"/>
                <TextBox x:Name="txtPasswordVisible" Grid.Column="0"
                         Text="{Binding PasswordPlainText, UpdateSourceTrigger=PropertyChanged}"
                         Visibility="Collapsed"/>

                <CheckBox x:Name="chkShowPassword" Grid.Column="1" Content="Показать"
                          Margin="5,0,0,0" VerticalAlignment="Center"
                          Checked="ChkShowPassword_Checked"
                          Unchecked="ChkShowPassword_Unchecked"/>
            </Grid>

            <!-- Фамилия -->
            <TextBlock Text="Фамилия:" Grid.Row="4" FontWeight="Bold"/>
            <TextBox x:Name="txtLastName" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="5" Margin="0,2,0,10"/>

            <!-- Имя -->
            <TextBlock Text="Имя:" Grid.Row="6" FontWeight="Bold"/>
            <TextBox x:Name="txtFirstName" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="7" Margin="0,2,0,10"/>

            <!-- Отчество -->
            <TextBlock Text="Отчество:" Grid.Row="8" FontWeight="Bold"/>
            <TextBox x:Name="txtMiddleName" Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="9" Margin="0,2,0,10"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон:" Grid.Row="10" FontWeight="Bold"/>
            <TextBox x:Name="txtPhoneNumber" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="11" Margin="0,2,0,10"/>

            <!-- Дата рождения -->
            <TextBlock Text="Дата рождения:" Grid.Row="12" FontWeight="Bold"/>
            <DatePicker x:Name="dpDateOfBirth" SelectedDate="{Binding DateOfBirth}" 
                        Grid.Row="13" Margin="0,2,0,10"/>

            <!-- Дата приема -->
            <TextBlock Text="Дата приема:" Grid.Row="14" FontWeight="Bold"/>
            <DatePicker x:Name="dpDateOfHire" SelectedDate="{Binding DateOfHire}" 
                        Grid.Row="15" Margin="0,2,0,10"/>

            <!-- Роль -->
            <TextBlock Text="Роль:" Grid.Row="16" FontWeight="Bold"/>
            <ComboBox x:Name="cmbRoles" DisplayMemberPath="Name" SelectedValuePath="Id" 
                      SelectedValue="{Binding RoleId}" Grid.Row="17" Margin="0,2,0,20"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="19" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="Сохранить" Width="80" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>