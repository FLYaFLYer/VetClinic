<Window x:Class="VetClinic.Dialogs.VisitEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый приём" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Пациент -->
        <TextBlock Text="Пациент:" Grid.Row="0" FontWeight="SemiBold"/>
        <ComboBox x:Name="cmbPatients" 
                  Grid.Row="1" 
                  Margin="0,5,0,10"
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Id" 
                  SelectedValue="{Binding PatientId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                  Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>

        <!-- Диагноз -->
        <TextBlock Text="Диагноз:" Grid.Row="2" FontWeight="SemiBold"/>
        <TextBox x:Name="txtDiagnosis" 
                 Grid.Row="3" 
                 Margin="0,5,0,10"
                 Text="{Binding Diagnosis, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                 Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>

        <!-- Симптомы -->
        <TextBlock Text="Симптомы:" Grid.Row="4" FontWeight="SemiBold"/>
        <TextBox x:Name="txtSymptoms" 
                 Grid.Row="5" 
                 Height="60" 
                 Margin="0,5,0,10"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding Symptoms}"/>

        <!-- Температура -->
        <TextBlock Text="Температура (°C):" Grid.Row="6" FontWeight="SemiBold"/>
        <TextBox x:Name="txtTemperature" 
                 Grid.Row="7" 
                 Margin="0,5,0,10"
                 Text="{Binding Temperature, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                 Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>

        <!-- Вес -->
        <TextBlock Text="Вес (кг):" Grid.Row="8" FontWeight="SemiBold"/>
        <TextBox x:Name="txtWeight" 
                 Grid.Row="9" 
                 Margin="0,5,0,20"
                 Text="{Binding Weight, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                 Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>

        <!-- Рекомендации -->
        <TextBlock Text="Рекомендации:" Grid.Row="10" FontWeight="SemiBold"/>
        <TextBox x:Name="txtRecommendations" 
                 Grid.Row="11"
                 Height="60" 
                 Margin="0,5,0,20"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding Recommendations}"/>

        <!-- Кнопки с отступами -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Style="{StaticResource CancelButtonStyle}" 
                    Click="BtnCancel_Click"
                    Margin="0,0,20,0"/>
            <Button Content="Сохранить" 
                    Style="{StaticResource DialogButtonStyle}" 
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>