<Window x:Class="VetClinic.Dialogs.VisitEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование приёма" 
        Height="550" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Заголовок -->
                <TextBlock Text="Редактирование приёма" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#FF4CAF50"/>

                <!-- Пациент -->
                <TextBlock Text="Пациент:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbPatients" 
                          Margin="0,5,0,10"
                          DisplayMemberPath="Name" 
                          SelectedValuePath="Id" 
                          SelectedValue="{Binding PatientId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Диагноз -->
                <TextBlock Text="Диагноз:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDiagnosis" 
                         Margin="0,5,0,10"
                         Text="{Binding Diagnosis, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         Height="60"
                         VerticalScrollBarVisibility="Auto"
                         Padding="8,4"/>

                <!-- Симптомы -->
                <TextBlock Text="Симптомы:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtSymptoms" 
                         Height="80" 
                         Margin="0,5,0,10"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding Symptoms}"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Padding="8,4"/>

                <!-- Температура -->
                <TextBlock Text="Температура (°C):" FontWeight="SemiBold"/>
                <TextBox x:Name="txtTemperature" 
                         Margin="0,5,0,20"
                         Text="{Binding Temperature, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ValidatableTextBoxStyle}"
                         Height="34"
                         Padding="8,4"/>

                <!-- Рекомендации -->
                <TextBlock Text="Рекомендации:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtRecommendations" 
                         Height="80" 
                         Margin="0,5,0,20"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding Recommendations}"
                         Style="{StaticResource BaseTextBoxStyle}"
                         Padding="8,4"/>

                <!-- Статус -->
                <TextBlock Text="Статус:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbStatus"
                          ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding Status, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,5,0,20"
                          Style="{StaticResource ValidatableComboBoxStyle}"
                          Height="34"
                          Padding="8,4"/>

                <!-- Кнопки -->
                <Border BorderBrush="#FFEEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button x:Name="btnCancel"
                                Content="Отмена" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Click="BtnCancel_Click"/>
                        <Button x:Name="btnSave"
                                Content="Сохранить" 
                                Style="{StaticResource DialogButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>