<Application x:Class="VetClinic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Основные цвета -->
        <Color x:Key="PrimaryGreenColor">#FF4CAF50</Color>
        <Color x:Key="PrimaryGreenDarkColor">#FF388E3C</Color>
        <Color x:Key="ErrorColor">#FFD32F2F</Color>
        <Color x:Key="BorderColor">#FFDDDDDD</Color>
        <Color x:Key="BackgroundColor">#FFF9F9F9</Color>
        <Color x:Key="ErrorBorderColor">#FFD32F2F</Color>
        <Color x:Key="WarningColor">#FFF57C00</Color>
        <Color x:Key="InfoColor">#FF1976D2</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="{StaticResource PrimaryGreenColor}"/>
        <SolidColorBrush x:Key="PrimaryGreenDarkBrush" Color="{StaticResource PrimaryGreenDarkColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="ErrorBorderBrush" Color="{StaticResource ErrorBorderColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

        <!-- Стиль для кнопок боковой панели -->
        <Style TargetType="Button" x:Key="SidebarButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для активной кнопки боковой панели -->
        <Style TargetType="Button" x:Key="SidebarButtonActive" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- ИСПРАВЛЕННЫЙ ШАБЛОН ДЛЯ ОШИБОК ВАЛИДАЦИИ (57 проблема) -->
        <ControlTemplate x:Key="ValidationErrorTemplate">
            <Grid>
                <!-- Основной элемент с красной рамкой при ошибке -->
                <Border 
                    BorderBrush="{StaticResource ErrorBorderBrush}"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="2">
                    <AdornedElementPlaceholder Name="CustomAdorner"/>
                </Border>

                <!-- Кружок с восклицательным знаком в правом верхнем углу -->
                <Border 
                    Background="{StaticResource ErrorBrush}"
                    CornerRadius="10"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,-5,-5,0"
                    ToolTipService.InitialShowDelay="100"
                    ToolTipService.ShowDuration="30000">

                    <TextBlock 
                        Text="!"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <TextBlock.ToolTip>
                            <ToolTip 
                                Background="{StaticResource ErrorBrush}"
                                Foreground="White"
                                Padding="10,8"
                                Placement="Bottom"
                                HorizontalOffset="0"
                                VerticalOffset="5"
                                HasDropShadow="True"
                                BorderBrush="DarkRed"
                                BorderThickness="1">

                                <TextBlock 
                                    Text="{Binding Path=AdornedElement.(Validation.Errors)[0].ErrorContent, 
                                           RelativeSource={RelativeSource TemplatedParent}}"
                                    TextWrapping="Wrap"
                                    MaxWidth="400"
                                    FontSize="13"
                                    FontWeight="SemiBold"/>
                            </ToolTip>
                        </TextBlock.ToolTip>
                    </TextBlock>
                </Border>
            </Grid>
        </ControlTemplate>

        <!-- УЛУЧШЕННЫЕ СТИЛИ ДЛЯ ЭЛЕМЕНТОВ УПРАВЛЕНИЯ -->
        <!-- Базовый стиль для TextBox с валидацией -->
        <Style TargetType="TextBox" x:Key="ValidatableTextBoxStyle">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <ToolTip 
                                Background="{StaticResource ErrorBrush}"
                                Foreground="White"
                                Padding="10,8"
                                Placement="Bottom"
                                HasDropShadow="True">
                                <TextBlock 
                                    Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"
                                    TextWrapping="Wrap"
                                    MaxWidth="400"
                                    FontSize="13"
                                    FontWeight="SemiBold"/>
                            </ToolTip>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Базовый стиль для TextBox без валидации -->
        <Style TargetType="TextBox" x:Key="BaseTextBoxStyle" BasedOn="{StaticResource ValidatableTextBoxStyle}">
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>

        <!-- Базовый стиль для DatePicker с валидацией -->
        <Style TargetType="DatePicker" x:Key="ValidatableDatePickerStyle">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <ToolTip 
                                Background="{StaticResource ErrorBrush}"
                                Foreground="White"
                                Padding="10,8"
                                Placement="Bottom"
                                HasDropShadow="True">
                                <TextBlock 
                                    Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"
                                    TextWrapping="Wrap"
                                    MaxWidth="400"
                                    FontSize="13"
                                    FontWeight="SemiBold"/>
                            </ToolTip>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Базовый стиль для DatePicker без валидации -->
        <Style TargetType="DatePicker" x:Key="BaseDatePickerStyle" BasedOn="{StaticResource ValidatableDatePickerStyle}">
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>

        <!-- Базовый стиль для ComboBox с валидацией -->
        <Style TargetType="ComboBox" x:Key="ValidatableComboBoxStyle">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <ToolTip 
                                Background="{StaticResource ErrorBrush}"
                                Foreground="White"
                                Padding="10,8"
                                Placement="Bottom"
                                HasDropShadow="True">
                                <TextBlock 
                                    Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"
                                    TextWrapping="Wrap"
                                    MaxWidth="400"
                                    FontSize="13"
                                    FontWeight="SemiBold"/>
                            </ToolTip>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Базовый стиль для ComboBox без валидации -->
        <Style TargetType="ComboBox" x:Key="BaseComboBoxStyle" BasedOn="{StaticResource ValidatableComboBoxStyle}">
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>

        <!-- Стиль для кнопок навигации -->
        <Style TargetType="Button" x:Key="NavButtonStyle">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenDarkBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryGreenDarkBrush}"/>
                    <Setter Property="BorderBrush" Value="#FF2E7D32"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2E7D32"/>
                    <Setter Property="BorderBrush" Value="#FF1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок в диалогах -->
        <Style TargetType="Button" x:Key="DialogButtonStyle">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreenDarkBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryGreenDarkBrush}"/>
                    <Setter Property="BorderBrush" Value="#FF2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок отмены -->
        <Style TargetType="Button" x:Key="CancelButtonStyle" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#FFf44336"/>
            <Setter Property="BorderBrush" Value="#FFd32f2f"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFd32f2f"/>
                    <Setter Property="BorderBrush" Value="#FFc62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FFEEEEEE"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF9F9F9"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsReadOnly" Value="False"/>
        </Style>

        <!-- Стиль для заголовков DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
        </Style>

        <!-- Стиль для информационных сообщений -->
        <Style x:Key="InfoMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3F3F3"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,10,0,20"/>
        </Style>

        <!-- Стиль для текста информационных сообщений -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Стиль для полей только для чтения -->
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="Background" Value="#FFF9F9F9"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Application.Resources>
</Application>