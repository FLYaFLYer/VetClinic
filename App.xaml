<Application x:Class="VetClinic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Основные цвета -->
        <Color x:Key="PrimaryGreenColor">#FF4CAF50</Color>
        <Color x:Key="PrimaryGreenDarkColor">#FF388E3C</Color>
        <Color x:Key="ErrorColor">#FFD32F2F</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryGreenBrush" Color="{StaticResource PrimaryGreenColor}"/>
        <SolidColorBrush x:Key="PrimaryGreenDarkBrush" Color="{StaticResource PrimaryGreenDarkColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

        <!-- Шаблон для ошибок валидации -->
        <ControlTemplate x:Key="ValidationErrorTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AdornedElementPlaceholder x:Name="adornerPlaceholder" Grid.Column="0"/>

                <Border 
                    Grid.Column="1"
                    Background="Red" 
                    CornerRadius="10"
                    Width="20"
                    Height="20"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <TextBlock 
                        Text="!"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock.ToolTip>
                            <ToolTip 
                                Background="#FFD32F2F"
                                Foreground="White"
                                Padding="8"
                                Placement="Right"
                                HasDropShadow="True">
                                <TextBlock Text="{Binding Path=AdornedElement.(Validation.Errors)[0].ErrorContent, 
                                    RelativeSource={RelativeSource AncestorType=Adorner}}"/>
                            </ToolTip>
                        </TextBlock.ToolTip>
                    </TextBlock>
                </Border>
            </Grid>
        </ControlTemplate>

        <!-- Стиль для кнопок навигации - ФИКСИРОВАННЫЙ РАЗМЕР -->
        <Style TargetType="Button" x:Key="NavButtonStyle">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF388E3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF388E3C"/>
                    <Setter Property="BorderBrush" Value="#FF2E7D32"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2E7D32"/>
                    <Setter Property="BorderBrush" Value="#FF1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок в диалогах с отступом -->
        <Style TargetType="Button" x:Key="DialogButtonStyle">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF388E3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF388E3C"/>
                    <Setter Property="BorderBrush" Value="#FF2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок отмены -->
        <Style TargetType="Button" x:Key="CancelButtonStyle" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#FFf44336"/>
            <Setter Property="BorderBrush" Value="#FFd32f2f"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFd32f2f"/>
                    <Setter Property="BorderBrush" Value="#FFc62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FFEEEEEE"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF9F9F9"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsReadOnly" Value="False"/>
        </Style>

        <!-- Стиль для заголовков DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
        </Style>
    </Application.Resources>
</Application>