<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ветеринарная клиника" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- Стиль для красивой кнопки выхода -->
        <Style TargetType="Button" x:Key="LogoutButtonStyle">
            <Setter Property="Background" Value="#FFf44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFd32f2f"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFd32f2f"/>
                    <Setter Property="BorderBrush" Value="#FFc62828"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFb71c1c"/>
                    <Setter Property="BorderBrush" Value="#FFb71c1c"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок боковой панели -->
        <Style TargetType="Button" x:Key="SidebarButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель -->
        <Border Height="60" Background="#FF4CAF50" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="🐾" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Ветеринарная клиника" 
                               FontSize="20" 
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="tbUserInfo" 
                               Margin="30,0,0,0"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Center">
                    <Button x:Name="btnNotifications" 
                            Content="🔔" 
                            Margin="0,0,20,0" 
                            Padding="10"
                            Click="BtnNotifications_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Cursor="Hand"
                            ToolTip="Уведомления"/>

                    <Button x:Name="btnLogout" 
                            Content="Выход" 
                            Padding="12,6"
                            Click="BtnLogout_Click"
                            Style="{StaticResource LogoutButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель навигации -->
            <Border Grid.Column="0" 
                    Background="#FFF9F9F9" 
                    BorderBrush="#FFEEEEEE" 
                    BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    <Button x:Name="btnPatients" 
                            Content="🐶 Пациенты" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnMedicines" 
                            Content="💊 Лекарства" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnVisits" 
                            Content="📋 Приёмы" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnOwners" 
                            Content="👤 Владельцы" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnReports" 
                            Content="📊 Отчёты" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnUsers" 
                            Content="👥 Пользователи" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Основная область -->
            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>