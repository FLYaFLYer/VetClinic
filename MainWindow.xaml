<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ветеринарная клиника" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- Стиль для кнопки уведомлений -->
        <Style TargetType="Button" x:Key="NotificationButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <TextBlock Text="🔔" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <Border x:Name="badge"
                                    Background="Red"
                                    CornerRadius="10"
                                    Width="20"
                                    Height="20"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="2,-2,0,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="badgeText"
                                           Text="0"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding UnreadCount}" Value="0">
                                <Setter TargetName="badge" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding UnreadCount}" Value="{x:Null}">
                                <Setter TargetName="badge" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель -->
        <Border Height="60" Background="#FF4CAF50" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="🐾" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Ветеринарная клиника" 
                               FontSize="20" 
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="tbUserInfo" 
                               Margin="30,0,0,0"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Center">
                    <Button x:Name="btnNotifications" 
                            Style="{StaticResource NotificationButtonStyle}"
                            Margin="0,0,20,0"
                            Click="BtnNotifications_Click"
                            ToolTip="Уведомления"
                            DataContext="{Binding}"/>

                    <Button x:Name="btnLogout" 
                            Content="Выход" 
                            Padding="12,6"
                            Click="BtnLogout_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель навигации -->
            <Border Grid.Column="0" 
                    Background="#FFF9F9F9" 
                    BorderBrush="#FFEEEEEE" 
                    BorderThickness="0,0,1,0">
                <StackPanel x:Name="sidebarPanel" Margin="0,20,0,0">
                    <Button x:Name="btnPatients" 
                            Content="🐶 Пациенты" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnMedicines" 
                            Content="💊 Лекарства" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnVisits" 
                            Content="📋 Приёмы" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnOwners" 
                            Content="👤 Владельцы" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnReports" 
                            Content="📊 Отчёты" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"/>
                    <Button x:Name="btnUsers" 
                            Content="👥 Пользователи" 
                            Style="{StaticResource SidebarButton}"
                            Click="NavButton_Click"
                            Height="48"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Основная область -->
            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>