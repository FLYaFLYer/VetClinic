<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ветеринарная клиника" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF4CAF50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ветеринарная клиника" 
                               FontSize="20" 
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="tbUserInfo" 
                               Margin="20,0,0,0"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnNotifications" 
                            Content="🔔" 
                            Margin="10,0,10,0" 
                            Padding="10,5"
                            Click="BtnNotifications_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"/>

                    <Button x:Name="btnLogout" 
                            Content="Выход" 
                            Padding="10,5"
                            Click="BtnLogout_Click"
                            Style="{StaticResource NavButtonStyle}"
                            Background="Transparent"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="200" Background="#FFEEEEEE">
                <StackPanel>
                    <Button x:Name="btnPatients" Content="Пациенты" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavButton_Click"/>
                    <Button x:Name="btnMedicines" Content="Лекарства" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavButton_Click"/>
                    <Button x:Name="btnVisits" Content="Приёмы" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavButton_Click"/>
                    <Button x:Name="btnOwners" Content="Владельцы" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavButton_Click"/>
                    <Button x:Name="btnReports" Content="Отчёты" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavButton_Click"/>
                    <Button x:Name="btnUsers" Content="Пользователи" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavButton_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>