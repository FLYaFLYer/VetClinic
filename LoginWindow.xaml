<Window x:Class="VetClinic.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ветеринарная клиника - Авторизация" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FFf0f0f0">
    <Grid>
        <Border CornerRadius="15" 
                Background="White" 
                Padding="25" 
                Width="350"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Ветеринарная клиника" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Авторизация" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtLogin" 
                         Height="30" 
                         Margin="0,5,0,10"
                         FontSize="14" 
                         Padding="5"
                         BorderBrush="#FFa0a0a0" 
                         BorderThickness="1"/>

                <TextBlock Text="Пароль:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" 
                             Height="30" 
                             Margin="0,5,0,20"
                             FontSize="14" 
                         Padding="5"
                         BorderBrush="#FFa0a0a0" 
                         BorderThickness="1"/>

                <Button Content="Войти" 
                        Height="40"
                        Click="BtnLogin_Click"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        BorderThickness="0"/>

                <Button Content="Сменить пароль" 
                        Height="30"
                        Click="BtnChangePassword_Click"
                        Margin="0,10,0,0"
                        Background="Transparent"
                        Foreground="#FF1976D2"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>